{
    "name": "casper-react-bulma",
    "description": "Casper ghost blog theme with react and bulma",
    "version": "3.0.12",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "contributors": [
        {
            "name": "Julien Prugne",
            "email": "julien@webeleon.dev",
            "url": "https://webeleon.dev"
        },
        {
            "name": "Ghost Foundation",
            "email": "hello@ghost.org",
            "url": "https://ghost.org"
        }
    ],
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "react",
        "bulma"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bassochette/casper-react-bulma.git"
    },
    "bugs": "https://github.com/bassochette/casper-react-bulma/issues",
    "devDependencies": {
        "@babel/core": "7.26.10",
        "@babel/preset-env": "7.26.9",
        "@babel/preset-react": "7.26.3",
        "@tryghost/release-utils": "0.8.1",
        "autoprefixer": "10.4.21",
        "babel-loader": "10.0.0",
        "beeper": "3.0.0",
        "bulma": "1.0.3",
        "css-loader": "7.1.2",
        "cssnano": "7.0.6",
        "gscan": "4.47.0",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "6.1.0",
        "inquirer": "12.5.0",
        "node-sass": "9.0.0",
        "postcss-color-function": "4.1.0",
        "postcss-custom-properties": "14.0.4",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.2",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "sass-loader": "16.0.5",
        "style-loader": "4.0.0",
        "webpack": "5.98.0",
        "webpack-cli": "6.0.1",
        "webpack-stream": "7.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
